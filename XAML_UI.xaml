<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppChartDirectorLinearMeter"
        xmlns:ChartDirector="clr-namespace:ChartDirector;assembly=ChartDirector.Net.Desktop.Controls" x:Class="WpfAppChartDirectorLinearMeter.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300"
        Loaded="WindowLoaded">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="PortCombo" Width="110" MinWidth="90" Margin="0,0,6,0"/>
            <Button x:Name="RefreshPortsButton" Content="Refresh" Click="RefreshPorts_Click" Margin="0,0,6,0"/>
            <Button x:Name="ConnectButton" Content="Connect" Click="Connect_Click"/>
        </StackPanel>

        <ChartDirector:WPFChartViewer Grid.Row="1" x:Name="WPFChartViewer1" Width="300"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
            <TextBlock Text="Voltage:" Margin="0,0,6,0"/>
            <TextBlock x:Name="VoltageText" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>